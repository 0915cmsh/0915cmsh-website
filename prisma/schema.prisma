datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Notice {
  id        Int      @id @default(autoincrement())
  title     String
  body      String   @db.Text
  createdAt DateTime @default(now())
  published Boolean  @default(true)
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  type      String   // 'corporate' | 'jobseeker' | 'employee'
  name      String
  email     String
  phone     String
  company   String?
  position  String?
  title     String
  body      String   @db.Text
  createdAt DateTime @default(now())
}